<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview1"
            android:text="Hospital Name"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/textview1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/filed_large"
            android:id="@+id/editext1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:text="Street Address 1"
            android:textSize="18sp"
            android:id="@+id/textview2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textview1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/textview2"
            android:id="@+id/editext2"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/filed_large"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview2"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:text="Street Address 2"
            android:textSize="18sp"
            android:id="@+id/textview3"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textview2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:id="@+id/editext3"
            android:layout_toRightOf="@+id/textview3"
            android:background="@drawable/filed_large"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview3"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:text="License No"
            android:textSize="18sp"
            android:id="@+id/textview4"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textview3"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="10dp"
            android:id="@+id/editext4"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/textview4"
            android:background="@drawable/filed_large"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview4"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:text="Phone"
            android:textSize="18sp"

            android:id="@+id/textview5"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textview4"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:id="@+id/editext5"
            android:inputType="phone"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/textview5"
            android:background="@drawable/filed_large"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview5"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:text="Email"
            android:textSize="18sp"
            android:id="@+id/textview6"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textview5"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:id="@+id/editext6"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/textview5"
            android:background="@drawable/filed_large"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editext6"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="Save"
            android:background="#c91111"
            android:textColor="#ffffff"
            android:id="@+id/save"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_below="@+id/editext6"
            android:layout_marginTop="30dp"
            android:background="#c91111"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/save"
            android:layout_marginLeft="10dp"
            android:id="@+id/cancel"/>
    </RelativeLayout>
</ScrollView>

