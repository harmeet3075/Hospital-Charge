<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/filed_large"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Name"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:id="@+id/hospital_form_edittext1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/hospital_form_edittext1"
            android:id="@+id/hospital_form_linear1">

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_below="@+id/hospital_form_edittext1"
                android:background="@drawable/filed_large"
                android:layout_marginLeft="10dp"
                android:id="@+id/hospital_form_edittext2"
                android:layout_marginTop="10dp"
                android:hint="Enter Code"
                android:singleLine="true"
                android:paddingLeft="10dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_below="@+id/hospital_form_edittext1"
                android:layout_toRightOf="@+id/hospital_form_edittext2"
                android:background="@drawable/filed_large"
                android:layout_marginLeft="10dp"
                android:id="@+id/hospital_form_edittext3"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:hint="Enter Phone"
                android:singleLine="true"
                android:inputType="phone"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/hospital_form_linear1"
            android:layout_marginTop="10dp"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/filed_large"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:id="@+id/hospital_form_edittext4"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/hospital_form_edittext4"
            android:layout_marginTop="10dp"
            android:hint="Enter Password"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:background="@drawable/filed_large"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:id="@+id/hospital_form_edittext5"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/hospital_form_edittext5"
            android:layout_marginTop="10dp"
            android:hint="Enter Street Address 1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/filed_large"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:id="@+id/hospital_form_edittext6"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/hospital_form_edittext6"
            android:layout_marginTop="10dp"
            android:hint="Enter Street Address 2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/filed_large"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:id="@+id/hospital_form_edittext7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/hospital_form_edittext7"
            android:id="@+id/hospital_form_linear2">

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_below="@+id/hospital_form_edittext7"
                android:background="@drawable/filed_large"
                android:layout_marginLeft="10dp"
                android:id="@+id/hospital_form_edittext8"
                android:layout_marginTop="10dp"
                android:hint="Enter City"
                android:singleLine="true"
                android:paddingLeft="10dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_below="@+id/hospital_form_edittext7"
                android:layout_toRightOf="@+id/hospital_form_edittext2"
                android:background="@drawable/filed_large"
                android:layout_marginLeft="10dp"
                android:id="@+id/hospital_form_edittext9"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:hint="Enter Zip"
                android:singleLine="true"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/hospital_form_linear2"
            android:id="@+id/hospital_form_linear3">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:id="@+id/hospital_form_spinner1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/filed_large"
                android:paddingLeft="10dp"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:id="@+id/hospital_form_spinner2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/filed_large"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/hospital_form_linear3"
            android:layout_marginTop="10dp"
            android:hint="Enter License No"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/filed_large"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:id="@+id/hospital_form_edittext12"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/hospital_form_button"
            android:background="@drawable/btn_submit"
            android:layout_below="@+id/hospital_form_edittext12"
            android:layout_alignRight="@+id/hospital_form_edittext12"
            android:layout_alignEnd="@+id/hospital_form_edittext12" />
    </RelativeLayout>

</ScrollView>
