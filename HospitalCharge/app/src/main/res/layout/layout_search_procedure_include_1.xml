<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#25949393">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_bulet_small"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/relative1_imageview2"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Medicare Amount"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:id="@+id/avg_textview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_info_small"
            android:layout_marginLeft="4dp"
            android:visibility="invisible"
            android:id="@+id/relative1_imageview3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$12,234.12"
            android:textColor="#000000"
            android:textSize="12sp"
            android:id="@+id/textView2"
            android:layout_marginLeft="27dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_bulet_small"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:id="@+id/relative1_imageview4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="Average Charge Amount"
            android:layout_marginLeft="10dp"
            android:id="@+id/total_textview"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_info_small"
            android:layout_marginLeft="4dp"
            android:id="@+id/relative1_imagevie"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="$23,345.23"
            android:textColor="#000000"
            android:layout_marginLeft="39dp"
            android:id="@+id/relative_textview2" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_bulet_small"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/relative1_imageview5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Medicare Payment"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:id="@+id/med_textview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_info_small"
            android:layout_marginLeft="4dp"
            android:id="@+id/relative1_imageview6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="$45,567.54"
            android:layout_marginLeft="23dp"
            android:id="@+id/textView3"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/relative1_imageview5"
            android:layout_alignLeft="@+id/relative_textview2"
            android:layout_alignStart="@+id/relative_textview2" />
    </LinearLayout>
</LinearLayout>
